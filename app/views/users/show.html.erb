<div class = "row">
  <div class = "col-md-8">
    <div class = "media">
      <br />
      <% avatar_url = @user.avatar_url(128) %>
      <% if avatar_url %>
        <div class = "media-left">
          <%= image_tag avatar_url, class: "media-object" %>
        </div>
      <% end %>
      <div class = "media-body">
        <h2 class = "media-heading"><%= @user.name %></h2>
        <small>
          <%= pluralize(@user.posts.count, 'post') %>,
          <%= pluralize(@user.comments.count, 'comment') %>
        </small>
      </div>
    </div>
  </div>
</div>

<h2>Favorites</h2>
<% @user.favorites.each do |favorite| %>
  <%= render partial: 'posts/gravatar', locals: { post: user_favorite_object(favorite) } %>
<% end %>

<h2>Posts</h2>
<%= render(@user.posts) || "#{@user.name} has not submitted any posts yet." %>

<h2>Comments</h2>
<%= render(partial: "comments/comment", collection: @user.comments) || "#{@user.name} has not submitted any comments yet."%>
